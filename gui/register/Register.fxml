<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
          fx:controller="gui.register.RegisterController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <BorderPane prefHeight="100.0" prefWidth="317.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <center>
            <Button mnemonicParsing="false" onAction="#register" prefHeight="26.0" prefWidth="133.0" text="Register"
                    BorderPane.alignment="CENTER_RIGHT">
                <BorderPane.margin>
                    <Insets right="5.0"/>
                </BorderPane.margin>
            </Button>
        </center>
        <bottom>
            <Hyperlink onAction="#goToLogin" text="Back to login" BorderPane.alignment="TOP_RIGHT">
                <BorderPane.margin>
                    <Insets right="5.0"/>
                </BorderPane.margin>
            </Hyperlink>
        </bottom>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
        <center>
            <Label text="Email" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="2">
        <center>
            <Label text="Password" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="3">
        <center>
            <Label text="First Name" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="4">
        <center>
            <Label text="Last Name" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <center>
            <Label fx:id="message" BorderPane.alignment="CENTER"/>
        </center>
    </BorderPane>
    <BorderPane prefHeight="200.0" prefWidth="200.0">
        <center>
            <Label text="Register" BorderPane.alignment="CENTER">
                <font>
                    <Font size="31.0"/>
                </font>
            </Label>
        </center>
    </BorderPane>
</GridPane>
