<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<ScrollPane prefHeight="375.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.backlog.BacklogController">

    <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefWidth="450.0">

        <GridPane hgap="10.0">
            <Text text="Column Name"/>
            <TextField fx:id="nomColumnField" prefHeight="25.0" prefWidth="292.0" GridPane.columnIndex="1"/>
            <Button onAction="#handleConfirm" text="Add" GridPane.columnIndex="2"/>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
            </rowConstraints>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
        <GridPane fx:id="tab" hgap="10.0" vgap="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </GridPane>
    </SplitPane>
</ScrollPane>
